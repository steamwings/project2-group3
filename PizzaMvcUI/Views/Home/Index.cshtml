@{
    ViewData["Title"] = "Home Page";
}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" type="text/javascript"></script>
<script src="~/js/home.js"></script>
<body id="HomePageBody">
    <div id="HomeHeader" class="text-center">
        @if (TempData["User"] != null)
        {
            var cust = await API.GetCustomer((int)TempData["User"]);
            if (cust != null)
            {
                <h1 class="display-4">Welcome, @cust.FirstName</h1>
            }
            else
            {
                <h1 class="display-4">Welcome</h1>
            }
        }
        else
        {
            <h1 class="display-4">Welcome</h1>
        }
        @{ TempData.Keep(); }
        <p><a asp-action="Index" asp-controller="Orders">Start your order</a>.</p>

    </div>
    <a asp-controller="Pizzas" asp-action="PreMade"><img src="~/images/banner1.png" class="mySlides"></a>
    <a asp-controller="sides" asp-action="index"><img src="~/images/banner2.png" class="mySlides"></a>
    <a asp-controller="Pizzas" asp-action="Build"><img src="~/images/banner3.png" class="mySlides"></a>
</body>
