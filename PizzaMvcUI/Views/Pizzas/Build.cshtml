
@{
    ViewData["Title"] = "Build a Pizza";
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js" type="text/javascript"></script>
<script src="~/js/site.js"></script>
<script src="~/js/pizza.js"></script>

<div class="text-center">
    <h1 class="display-4" id="hdrBuild">Build your Perfect Pizza</h1>
</div>

<div class="progress" id="progressBuildPizza">

</div>

<div id="divDoStuff">

</div>

<div id="SideConfirm" class="ConfirmationWindow">
    <div class="ConfirmationPrompt">
        <p>Your pizza is in your Cart!</p>
        <a asp-action="Index">Continue Shopping</a> | 
        <a asp-controller="ViewCart" asp-action="Index">Go To Checkout</a>
    </div>
</div>

<div id="divButtons" class="center">
    <input type="button" id="btnIWant" value="Start Building" class="btn-primary" />
</div>

